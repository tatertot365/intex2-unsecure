@{
    ViewData["Title"] = "Edit User";
}
@model EditUserViewModel
<div class="Burial">
    <h1 style="margin-top:3rem;">Edit User</h1>
</div>
<div class="userForm">
    <div class="user">
        <form class="customForm" method="post">
            <label>Userid:</label>
            <input disabled="disabled" asp-for="Id" />
            <label>Username:</label>
            <input asp-for="UserName" />
            <label>Email:</label>
            <input asp-for="Email" />
            <button class="button" type="submit">Submit</button>
        </form>
    </div>
</div>