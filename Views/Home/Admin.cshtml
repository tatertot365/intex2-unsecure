@{
    ViewData["Title"] = "Admin";
}
@model List<EditUserViewModel>
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<div class="Burial" >
    <h1 class="topspace">User Accounts</h1>
</div>
<div class="admin" >
    <div>
        <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>Roles</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@foreach(var role in user.Roles)
                            {
                                @role
                            }
                            </td>
                            <td class="none"><a asp-action="EditUser" asp-route-id="@user.Id" class="button" style="text-decoration: none;">Edit</a></td>
                            <td class="none"><a asp-action="DeleteUser" asp-route-id="@user.Id" class="button" style="text-decoration: none;">Delete</a></td>
                        </tr>
                    }
        
            </tbody>
        </table>
        <div class="none">
            <a class="button" style="text-decoration: none;" asp-action="ManageAdmin">Manage Admins</a>
        </div>
    </div>
</div>
