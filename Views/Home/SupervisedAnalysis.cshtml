@{
    ViewData["Title"] = "Head Direction";
}
@model HeadDirectionModel
<div class="text-center">
    <h1 class="display-4">Head Direction Prediction</h1>
</div>

<div class="userForm">
    <div class="user">
        <form class="customForm" method="post" asp-action="HeadDirectionAPI">
            <label asp-for="Depth">Depth:</label>
            <input type="number" step=".01" asp-for="Depth" required />
            <label asp-for="Sex">Sex:</label>
            <select asp-for="Sex" required>
                <option value="U">Unknown</option>
                <option value="M">Male</option>
                <option value="F">Female</option>
            </select>
            <label asp-for="Goods">Goods:</label>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Goods"/>
                <label class="form-check-label">Yes</label>
            </div>
            <label asp-for="Wrapping">Wrapping:</label>
            <select asp-for="Wrapping" required>
                <option value="U">Unknown</option>
                <option value="B">Bones</option>
                <option value="W">Whole</option>
                <option value="S">Skeleton</option>
            </select>
            <label asp-for="Count">Count of Yarns:</label>
            <input type="number" step="1" asp-for="Count" required />
            <label asp-for="Length">Length:</label>
            <input type="number" step="1" asp-for="Length" required/>
            <label asp-for="AgeAtDeath">Age at Death:</label>
            <select asp-for="AgeAtDeath" required>
                <option value="U">Unknown</option>
                <option value="A">Adult</option>
                <option value="C">Child</option>
                <option value="I">Infant</option>
                <option value="N">NewBorn</option>
            </select>

            <button class="button" type="submit">Submit</button>
        </form>
    </div>
</div>